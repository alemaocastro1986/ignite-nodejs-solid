{
  "openapi": "3.0.0",
  "info": {
    "title": "Atlas API",
    "description": "Documentation of Atlas API",
    "version": "1.0.0"
  },
  "paths": {
    "/users": {
      "post": {
        "tags": ["Users"],
        "summary": "Create User",
        "description": "Create new User",
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "name": {
                    "type": "string"
                  },
                  "email": {
                    "type": "string"
                  }
                },
                "required": ["name", "email"]
              },
              "example": {
                "name": "John Doe",
                "email": "johndoe@test.com"
              }
            }
          }
        },
        "responses": {
          "201": {
            "description": "User Created"
          },
          "400": {
            "description": "Bad request"
          }
        }
      },
      "get": {
        "tags": ["Users"],
        "summary": "List users",
        "description": "Get all users",
        "parameters": [
          {
            "description": "User id infoe",
            "name": "user_id",
            "in": "header",
            "required": true,
            "schema": {
              "type": "string"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "List all users"
          },
          "400": {
            "description": "Permission danied"
          }
        }
      }
    },

    "/users/{user_id}": {
      "get": {
        "tags": ["Users"],
        "summary": "Show User",
        "description": "View User informations",
        "parameters": [
          {
            "name": "user_id",
            "description": "User id",
            "in": "path",
            "required": true,
            "schema": {
              "type": "string"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Success"
          },
          "404": {
            "description": "User not found"
          }
        }
      }
    },
    "/users/{user_id}/admin": {
      "patch": {
        "tags": ["Users"],
        "summary": "Turn admin",
        "description": "Turn user an admin",
        "parameters": [
          {
            "name": "user_id",
            "description": "User id",
            "in": "path",
            "required": true,
            "schema": {
              "type": "string"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Success"
          },
          "404": {
            "description": "User not found"
          }
        }
      }
    }
  }
}
